# Environment Variables for Website Monitoring System
# Copy this file to .env and update with your actual values
# The .env file will be ignored by git for security

# Database Configuration
DB_HOST=localhost
DB_NAME=website_monitoring
DB_USER=root
DB_PASS=YOUR_MYSQL_PASSWORD_HERE

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=UTC

# Security Settings
SESSION_TIMEOUT=3600
CSRF_PROTECTION=true

# PHP Server Settings
PHP_SERVER_HOST=localhost
PHP_SERVER_PORT=8000
